{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "command": "dotnet build",
            "windows": {
                "command": "dotnet build"
            },
            "problemMatcher":"$msCompile",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Run tests",
            "type": "shell",
            "command": "dotnet run",
            "windows": {
                "command": "dotnet run",
            },
            "options": {
                "cwd": "${workspaceFolder}/src/test/Logic.Tests"
            },
            "problemMatcher":"$msCompile",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
    ]
}